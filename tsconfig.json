{
  "compilerOptions": {
    "types": ["node", "express", "jest"],
    "baseUrl": ".",
    "paths": {
      "@src/*": ["./src/*"],
      "@api/*": ["./api/*"],
      "@test/*": ["./tests/*"]
    },
    "outDir": "./dist",
    "allowJs": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true
  },
  "include": [
    "processes/**/*",
    "config/**/*",
    "database/**/*",
    "src/**/*",
    "api/**/*",
    "*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}